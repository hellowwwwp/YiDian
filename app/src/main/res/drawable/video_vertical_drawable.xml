<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" />
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/foreground_reverse_tertiary"
                android:startColor="@color/foreground_reverse_tertiary" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <shape>
                <corners android:radius="4dp" />
                <gradient
                    android:angle="90"
                    android:endColor="@color/main_primary"
                    android:startColor="@color/main_primary" />
            </shape>
        </clip>
    </item>
</layer-list>